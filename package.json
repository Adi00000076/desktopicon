{
  "name": "your-app",
  "version": "1.0.0",
  "build": {
    "appId": "com.yourapp.id",
    "productName": "MyApp",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "main.js",
      "index.html",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
